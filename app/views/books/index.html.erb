<h1>Books</h1>
 <table>
  <thead>
   <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>

      <% @books.each do |book| %>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>&nbsp;<a class="show" href="books/:id">Show</a>&nbsp;</td>
      <td><a class="edit" href="books/:id/edit">Edit</a>&nbsp;</td>
      <td><a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="/books/:id">Destroy</a>
      </td>
      </tr>
      <% end %>

  </tbody>
 </table>

  <h2>New Book</h2>
