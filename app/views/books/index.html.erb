<p id="notice"></p>
<h1>Books</h1>
 <table>
  <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
        <span><%= book.title %></span>
        <span><%= book.body %></span>
        <a class="show" href="books/:id">Show</a>
      <a class="edit" href="books/:id/edit">Edit</a>
      <a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="/books/:id">Destroy</a>
      <br>
      <% end %>

   </tbody>
  </table>

  <h2>New Book</h2>
